<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#324755"
    tools:context=".GetStartActivity">


    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_alignTop="@+id/imgtopimage"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgtopimage"
                android:src="@drawable/m1back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white"
                android:textSize="40sp"
                android:layout_marginTop="120dp"
                android:id="@+id/tvmortivation"
                android:layout_centerHorizontal="true"
                android:text="Mortivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_alignTop="@+id/tvmortivation"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="100dp"
                android:layout_alignLeft="@+id/tvmortivation"
                android:text="Quotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <LinearLayout
            android:layout_marginLeft="50dp"
            android:id="@+id/linear2"
            android:layout_alignTop="@+id/linear1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Track yourr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Activity Lifecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Loremawfoccsngvdjfk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#D97D54"
            android:textColor="#FFFFFF"
            android:text="GET STARTED"
            android:layout_width="300dp"
            android:layout_height="60dp" />
        <ImageView
            android:background="#C4714B"
            android:textColor="#FFFFFF"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/imggetstart" />

    </LinearLayout>


</RelativeLayout>