<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#324755"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">


    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="100dp"
        android:layout_alignBottom="@+id/linear3"
        android:orientation="vertical"
        android:id="@+id/linear4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="Track Your "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="Activity Lifestyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="#ffffff"
            android:layout_width="100dp"
            android:layout_height="2dp" />

        <TextView
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="Find your quotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imgsplashanim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splashback"
        />

    <RelativeLayout
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:id="@+id/tvmortivation"
            android:layout_centerHorizontal="true"
            android:text="Motivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_alignTop="@+id/tvmortivation"
            android:layout_alignRight="@+id/tvmortivation"
            android:layout_marginTop="40dp"
            android:text="Quotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:visibility="invisible"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btgetstart"
            android:background="#D97D54"
            android:textColor="#FFFFFF"
            android:text="GET STARTED"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="60dp" />
        <ImageView
            android:padding="13dp"
            android:src="@drawable/icongetstart"
            android:background="#C4714B"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:id="@+id/imggetstart" />
    </LinearLayout>

</RelativeLayout>