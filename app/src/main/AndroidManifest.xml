<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiteb.mortivationalquotes">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GetStartActivity">

        </activity>
        <activity
            android:name=".activity.OtherViewActivity"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/createquotestheme" />
        <activity
            android:name=".activity.ImageVIewActivity"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/createquotestheme" />
        <activity android:name=".activity.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:parentActivityName=".activity.MenuActivity"
            android:theme="@style/createquotestheme" />
    </application>

</manifest>